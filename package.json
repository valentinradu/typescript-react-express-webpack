{
  "name": "frontend",
  "version": "0.1.0",
  "description": "Frontend for Now Delivery app",
  "author": "Valentin Radu",
  "private": true,
  "dependencies": {
    "apollo-boost": "^0.1.4",
    "apollo-cache-inmemory": "^1.1.12",
    "apollo-client": "^2.2.3",
    "apollo-link": "^1.2.2",
    "apollo-link-http": "^1.5.4",
    "apollo-link-ws": "^1.0.8",
    "es-cookie": "^1.1.1",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "firebase": "^4.13.1",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.9.1",
    "moment": "^2.22.1",
    "react": "^16.3.2",
    "react-apollo": "^2.1.3",
    "react-datepicker": "^1.4.1",
    "react-dom": "^16.3.2",
    "react-google-maps": "^9.4.5",
    "react-helmet": "^5.2.0",
    "reactstrap": "^5.0.0",
    "rxjs": "^5.5.10",
    "subscriptions-transport-ws": "^0.9.8"
  },
  "config": {
    "server_url": "http://localhost"
  },
  "scripts": {
    "clean": "rimraf dist",
    "clean-server": "rimraf dist/index.js ",
    "clean-client": "rimraf dist/static ",
    "build": "rimraf dist && npm run build-client && npm run build-server ",
    "build-client": "NODE_ENV=production webpack --config tools/build/webpack.client.config.js --colors --mode production",
    "build-server": "NODE_ENV=production webpack --config tools/build/webpack.server.config.js --colors --mode production",
    "build-client:dev": "NODE_ENV=development webpack-dev-server --config tools/build/webpack.client.config.js --colors --watch --mode development",
    "build-server:dev": "npm run build-server -- --watch",
    "start:dev": "pm2 start tools/server/ecosystem.dev.config.js",
    "stop:dev": "pm2 stop tools/server/ecosystem.dev.config.js",
    "restart:dev": "pm2 restart tools/server/ecosystem.dev.config.js",
    "start": "pm2 start tools/server/ecosystem.config.js",
    "lint": "npm run lint-client && npm run lint-server",
    "lint-client": "tslint --project tsconfig.json",
    "lint-server": "tslint --project tsconfig.json",
    "build-graphql-schema": "apollo-codegen introspect-schema $npm_package_config_server_url/graphql --output schema.json",
    "build-graphql-types": "npm run build-graphql-schema && apollo-codegen generate graphql/**/*.gql --schema schema.json --target typescript --output types/graphql-types.ts && rm schema.json"
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/googlemaps": "^3.0.0",
    "@types/markerclustererplus": "^2.1.29",
    "@types/react": "^16.3.12",
    "@types/react-dom": "^16.0.5",
    "@types/react-helmet": "^5.0.5",
    "@types/reactstrap": "^5.0.21",
    "@types/uuid": "^3.4.3",
    "apollo-codegen": "^0.19.1",
    "babel-core": "6",
    "babel-loader": "^7.1.4",
    "css-loader": "^0.28.11",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "html-webpack-plugin": "^3.2.0",
    "pm2": "^2.10.2",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.0.1",
    "source-map-support": "^0.5.4",
    "style-loader": "^0.21.0",
    "ts-loader": "^4.2.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.12.0",
    "tslint-react": "^3.5.1",
    "typescript": "^2.8.3",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.14",
    "webpack-dev-server": "^3.1.3"
  }
}
